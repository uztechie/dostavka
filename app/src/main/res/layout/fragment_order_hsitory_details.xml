<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/colorBackground"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/custom_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_margin="16dp"
                    android:id="@+id/postal_details_tv_postal_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="items"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_document_scanner_24"
                    android:drawablePadding="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_margin="16dp"
                    android:id="@+id/postal_details_tv_postal_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="items"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_info_24"
                    android:drawablePadding="16dp"/>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_margin="16dp"
                    android:id="@+id/postal_details_tv_postal_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="items"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="16dp"/>

            </com.google.android.material.card.MaterialCardView>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postal_details_recyclerview"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>