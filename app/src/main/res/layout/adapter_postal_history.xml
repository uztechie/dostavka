<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginEnd="4dp"
                android:id="@+id/adapter_postal_history_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="id"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_marginStart="6dp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/status_bg"
                    android:id="@+id/adapter_postal_history_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="ddd\ndd"
                android:layout_weight="1"
                android:id="@+id/adapter_postal_history_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_marginLeft="6dp"
                android:id="@+id/adapter_postal_history_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="date"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>